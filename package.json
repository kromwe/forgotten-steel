{
  "name": "forgotten-steel",
  "version": "1.0.0",
  "description": "A WebGL text adventure game",
  "main": "electron-main.js",
  "homepage": "https://github.com/kromwe/forgotten-steel/",
  "scripts": {
    "start": "webpack serve --mode development --open",
    "build": "webpack --mode production",
    "electron": "NODE_ENV=development electron .",
    "electron-dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && NODE_ENV=development electron .\"",
    "build-electron": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "webgl",
    "text-adventure",
    "game"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.22.20",
    "babel-loader": "^9.1.3",
    "concurrently": "^9.2.1",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "electron": "^38.0.0",
    "electron-builder": "^26.0.12",
    "gl-matrix": "^3.4.3",
    "html-webpack-plugin": "^5.5.3",
    "mini-css-extract-plugin": "^2.9.4",
    "style-loader": "^3.3.3",
    "wait-on": "^8.0.4",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "build": {
    "appId": "com.forgottensteel.app",
    "productName": "Forgotten Steel",
    "directories": {
      "output": "electron-dist"
    },
    "files": [
      "!*",
      "!**/*",
      "dist/**/*",
      "electron-main.js",
      "package.json",
      "!dist/**/*.map",
      "!**/*.md",
      "!**/README*",
      "!**/.git*",
      "!**/node_modules/.cache",
      "!**/src",
      "!**/webpack.config.js"
    ],
    "compression": "maximum",
    "asar": true,
    "asarUnpack": [],
    "mac": {
      "target": {
        "target": "zip",
        "arch": ["x64"]
      },
      "category": "public.app-category.games",
      "minimumSystemVersion": "10.15.0"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": false,
      "createStartMenuShortcut": false
    }
  }
}
